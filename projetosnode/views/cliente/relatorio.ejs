<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes</title>
    <%- include("../partials/cabecalho.ejs")%>
</head>
<body>
    <div class="container">
        <div>
            <h2>Lista de Clientes</h2>
            <table class="table table-striped" border="1">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Idade</th>
                        <th scope="col">Detalhamento</th>
                    </tr>
                </thead>
                <tbody>
                <% for (const cliente of clientes) {%>
                    <tr>
                        <td>Id: <%=cliente.id %></td> 
                        <td>Nome: <%=cliente.nome %></td> 
                        <td>Idade: <%=cliente.idade %></td> 
                        <td><a href="http://localhost:9999/clientes/<%=cliente.id%>">Detalhar</a></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
        <br>
        <% if (salvo != undefined) { %>
            <div class="jumbotron text-center" style="background-color: lightgreen;"> Cadastrado com sucesso!</div>
        <% } %>
        <br>
        <div class="jumbotron text-center">
            <a href="/" class="btn btn-secondary" role="button" >PÃ¡gina Inicial</a>
        </div>
    </div>
</body>

<footer>
    <%- include("../partials/rodape.ejs")%>
</footer>

</html>