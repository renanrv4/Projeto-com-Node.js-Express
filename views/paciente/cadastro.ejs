<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include("../partials/cabecalho.ejs")%>
</head>
<body>
    <div class="container">
        <br>
        <% if (salvo == 4) { %>
            <div class="jumbotron text-center" style="background-color: rgb(214, 73, 68);"> CPF já existente!</div>
        <% } %>
            <% if(paciente.id != undefined) {%>
                <form class="form-inline" action="/pacientes/cadastro/<%=paciente._id%>" method="post">
                    <h1>Atualizar</h1>
                    <div class="form-group">
                        <label for="id"> ID:</label>
                        <input type="text" required class="form-control" readonly value="<%=paciente._id%>" id="id" name="id"><br>
                    </div>
                    <div class="form-group">
                        <label for="nome"> Nome:</label>
                        <input type="text" required class="form-control" value="<%=paciente.nome%>" id="nome" name="nome"><br>
                    </div>
                    <% if (salvo == 6) { %>
                        <div class="jumbotron text-center" style="background-color: rgb(214, 73, 68);"> CPF já cadastrado!</div>
                    <% } %>
                    <div class="form-group">
                        <label for="cpf"> CPF:</label>
                        <input type="text" required class="form-control" value="<%=paciente.cpf%>" id="cpf" name="cpf"><br>
                    </div>
                    <div class="form-group">
                        <label for="idade"> Idade: </label>
                        <input type="number" required class="form-control" value="<%=paciente.idade%>" id="idade" name="idade"><br>
                    </div>
                    <h3>Endereço</h3>
                    <div class="form-group">
                        <label for="estado"> Estado: </label>
                        <input class="form-control" required id="estado" value="<%=paciente.endereco.estado%>" type="text" name="estado"><br>
                    </div>
                    <div class="form-group">
                        <label for="cidade"> Cidade:</label>
                        <input type="text" required class="form-control" value="<%=paciente.endereco.cidade%>" id="cidade" name="cidade"><br>
                    </div>
                    <div class="form-group">
                        <label for="bairro"> Bairro:</label>
                        <input type="text" required class="form-control" value="<%=paciente.endereco.bairro%>" id="bairro" name="bairro"><br>
                    </div>
                    <div class="form-group">
                        <label for="rua"> Rua: </label>
                        <input type="text" required class="form-control" value="<%=paciente.endereco.rua%>" id="rua" name="rua"><br>
                    </div>
                    <div class="form-group">
                        <label for="logradouro"> Logradouro:</label>
                        <input type="text" required class="form-control" value="<%=paciente.endereco.logradouro%>" id="logradouro" name="logradouro"><br>
                    </div>
                    <div class="form-group">
                        <label for="numero"> Número: </label>
                        <input type="number" required class="form-control" value="<%=paciente.endereco.numero%>" id="numero" name="numero"><br>
                    </div>
                    <div class="jumbotron text-center">
                        <input type="submit" class="btn btn-primary" name="env" value="Atualizar">
                        <a href="/" class="btn btn-secondary" role="button" >Página Inicial</a>
                    </div>
                </form>
            <% }else{%>
                <form class="form-inline" action="/pacientes/cadastro" method="post">
                    <h1>Cadastrar</h1>
                    <div class="form-group">
                        <label for="nome"> Nome:</label>
                        <input type="text" required class="form-control" id="nome" name="nome"><br>
                    </div>
                    <div class="form-group">
                        <label for="cpf"> CPF:</label>
                        <input type="text" required class="form-control" id="cpf" name="cpf"><br>
                    </div>
                    <div class="form-group">
                        <label for="idade"> Idade: </label>
                        <input type="number" required class="form-control" id="idade" name="idade"><br>
                    </div>
                    <h3>Endereço</h3>
                    <div class="form-group">
                        <label for="estado"> Estado: </label>
                        <input class="form-control" required id="estado" type="text" name="estado"><br>
                    </div>
                    <div class="form-group">
                        <label for="cidade"> Cidade:</label>
                        <input type="text" required class="form-control" id="cidade" name="cidade"><br>
                    </div>
                    <div class="form-group">
                        <label for="bairro"> Bairro:</label>
                        <input type="text" required class="form-control" id="bairro" name="bairro"><br>
                    </div>
                    <div class="form-group">
                        <label for="rua"> Rua: </label>
                        <input type="text" required class="form-control" id="rua" name="rua"><br>
                    </div>
                    <div class="form-group">
                        <label for="logradouro"> Logradouro:</label>
                        <input type="text" required class="form-control" id="logradouro" name="logradouro"><br>
                    </div>
                    <div class="form-group">
                        <label for="numero"> Número: </label>
                        <input type="number" required class="form-control" id="numero" name="numero"><br>
                    </div>
                    <div class="jumbotron text-center">
                        <input type="submit" class="btn btn-primary" name="env" value="Salvar">
                        <a href="/" class="btn btn-secondary" role="button" >Página Inicial</a>
                    </div>
                </form>
            <%}%>
        </form>
    </div>
</body>

<footer>
    <%- include("../partials/rodape.ejs")%>
</footer>

</html>